/* pages/post/post.wxss */

.photo {
  width: 15vw;
  height: 15vw;
  border-radius: 7.5vw;
}

.noticepost .cover {
  width: 750rpx;
  height: 310rpx;
  background-size: 100% 100%;
}

.noticepost .title {
  text-align: center;
  font-size: 34rpx;
  line-height: 34rpx;
  color: #333;
  background: white;
  padding-top: 33rpx;
  padding-bottom: 33rpx;
}

.noticepost .description {
  margin-top: 2rpx;
  background: white;
  padding-top: 15rpx;
  padding-left: 33rpx;
  padding-right: 52rpx;
}

.memberphoto {
  width: 36rpx;
  height: 36rpx;
  border-radius: 18rpx;
}

.membername {
  margin-left: 10rpx;
  font-size: 24rpx;
  color: #999;
  margin-top: 7rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 250rpx;
}

.posttime {
  font-size: 24rpx;
  color: #999;
  margin-top: 7rpx;
  text-align: right;
}
.noticepost .delete{
 margin-left: 30rpx;
  font-size: 24rpx;
  color: #2D72B6;
  margin-top: 7rpx;
}
.desctext{
  margin-top: 7rpx;
  font-size: 28rpx;
  color:#666666;
}
.noticepost .viewphoto{
  margin-right: 9rpx;
}
.noticepost .viewphoto{
  width:38rpx;
  height: 38rpx;
  border-radius: 19rpx;
  margin-right: 9rpx;
}
.noticepost .viewphoto:last-child{
  margin-right: 0rpx;
}
.noticepost .other{
  margin-top: 37rpx;
}
.noticepost .viewcounts{
  margin-left: 26rpx;
  color:#999999;
  font-size: 24rpx;
  display: inline-flex;
}
.noticepost .sendshare{
  padding-top: 20rpx;
  padding-bottom: 45rpx;
  text-align: center;
  background: white;
}

.btnShare{
  padding-top: 4rpx;
  padding-bottom: 4rpx;
  font-size: 32rpx;
  margin-top: 33rpx;
  width: 689rpx;
  border-radius: 44rpx;
  background: -webkit-linear-gradient(left, #50BAFF , #008BE5); 
  background: -o-linear-gradient(right, #50BAFF , #008BE5);
  background: -moz-linear-gradient(right, #50BAFF , #008BE5); 
  background: linear-gradient(to right, #50BAFF , #008BE5); 
}
.allcomments{
  font-size: 24rpx;
  color:#999999;
  margin-top: 10rpx;
  padding:33rpx;
  background: white;
}
.comment{
  padding-top: 26rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  background: white;
  margin-top: 2rpx;
}
.commenttext{
  margin-top: 40rpx;
  margin-bottom: 30rpx;
  font-size: 28rpx;
  color:#666666;
}
.commentbox{
  border-top:2rpx #f2f2f2 solid;
  position: fixed;
  width: 750rpx;
  height:88rpx;
  bottom: 0;
  left: 0;
  background: white;
}
.inputcomment{
  border:#DDDDDD solid 1px;
  border-radius: 4rpx;
  width: 412rpx;
  height: 60rpx;
  margin-top: 14rpx;
  margin-left: 38rpx;
  font-size: 28rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
}
.likecomment{
  position: fixed;
  bottom: 0;
  right: 0;
}

.likeicon{
  width: 28rpx;
  height: 28rpx;
  margin-left: 28rpx;
  margin-bottom: 10rpx;
}
.likestr{
  font-size: 24rpx;
  margin-left: 12rpx;
  color:#999999;
}
.commenticon{
  width: 28rpx;
  height: 26rpx;
  margin-left: 28rpx;
  margin-bottom: 10rpx;
}
.pphoto{
  width:31%;
  margin-right: 2%;
}
.options{
  background: #F1F1F1;
  font-size: 28rpx;
  color:#666666;
  padding: 17rpx;
  margin-top:28rpx;
}