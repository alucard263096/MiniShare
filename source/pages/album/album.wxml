<view class="page">
  <view class="page__bd">
    <view class="weui-tab">
      <view class="weui-navbar">
        <block wx:for-items="{{tabs}}" wx:key="{{index}}">
          <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
            <view class="weui-navbar__title">{{item}}
              <view class="weui-badge" wx:if="{{index==0&&t1>0}}">{{t1}}</view>
              <view class="weui-badge" wx:if="{{index==1&&t2>0}}">{{t2}}</view>
            </view>
          </view>
        </block>
        <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
      </view>
      <view class="weui-tab__panel">
        <view class="weui-tab__content" hidden="{{activeIndex != 0}}">
          <view style='background:#f2f2f2;color:#999;font-size:11px;padding:2vh;'>
            <text>转发此页面到任意群，可创建群相册</text>
            <text class='primary' style='font-size:15px;line-height:15px;position:absolute;right:2vh;'>管理</text>
          </view>

          <view class='flex-row' style='flex-direction: row;flex-wrap: wrap;'>
            <view class='flexbox'>
              <view>
                <image class='cover' mode='center'></image>
              </view>
              <view class='cover_text'>创建相册</view>
            </view>
            <view class='flexbox'>
              <view>
                <image class='cover' mode='center'></image>
              </view>
              <view class='cover_text'>全部图片</view>
            </view>
            <view class='flexbox'>
              <view>
                <image class='cover' mode='center'></image>
              </view>
              <view class='cover_text'>全部视频</view>
            </view>
            
          </view>


        </view>
        <view class="weui-tab__content" hidden="{{activeIndex != 1}}">
          <view style='background:#f2f2f2;color:#999;font-size:11px;padding:2vh;'>
            <text>转发此页面到任意群，可创建群相册</text>
            <text class='primary' style='font-size:15px;line-height:15px;position:absolute;right:2vh;'>管理</text>
          </view>


        </view>
      </view>
    </view>
  </view>
</view>