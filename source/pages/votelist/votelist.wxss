/* pages/notify/notify.wxss */
.noticeitem{
  background: white;
  padding-top: 29rpx;
  padding-left: 29rpx;
  padding-bottom: 29rpx;
  padding-right: 32rpx;
  margin-top: 11rpx;
}
.noticeitem:first-child{
  margin-top: 0rpx;
}
.noticeitem .title{
  width: 530rpx;
  font-size: 34rpx;
  color:#333333;
}
.noticeitem .description{
  font-size: 28rpx;
  color:#666666;
  line-height: 36rpx;
  margin-bottom: 35rpx;
}
.noticeitem .photo{
  width:36rpx;
  height:36rpx;
  border-radius: 18rpx;
}
.noticeitem .membername{
  margin-top: 10rpx;
  font-size: 24rpx;
  color:#999999;
}
.noticeitem .delete{
  color:#2D72B6;
  font-size: 24rpx;
  margin-left: 30rpx;
  margin-top: 10rpx;
}
.noticeitem .updatetime{
  font-size: 24rpx;
  color:#999999;
  margin-top: 10rpx;
}

.btnNotice{
  padding-top: 4rpx;
  padding-bottom: 4rpx;
  font-size: 32rpx;
  margin-top: 33rpx;
  margin-bottom: 33rpx;
  width: 689rpx;
  border-radius: 44rpx;
  background: -webkit-linear-gradient(left, #50BAFF , #008BE5); 
  background: -o-linear-gradient(right, #50BAFF , #008BE5);
  background: -moz-linear-gradient(right, #50BAFF , #008BE5); 
  background: linear-gradient(to right, #50BAFF , #008BE5); 
}
.votedone{
  width: 145rpx;
  height:44rpx;
  border-radius: 22rpx;
  background:rgba(153,153,153,0.2);
  font-size: 28rpx;
  text-align: center;
  color:#666;
}