/**app.wxss**/
@import "/style/fontawesome.wxss";
@import "/style/weui.wxss";
@import "/wxParse/wxParse.wxss";

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
page{
  background: #F1F1F1;
}
.weui-footer{
    margin-top: 20rpx;
    margin-bottom: 20rpx;
}
.weui-footer_fixed-bottom{
    margin-bottom: 0;
    bottom:0;
}
.tab image{
  margin-top:1vh;
}
.tabicon{
  width: 8vw;
  height: 8vw;
}
.tabbutton{
  margin-top:1vh;
  width: 15vw;
  height: 15vw;
}
button[type="primary"]{
  background-color:#4D9CFB;
}
.button-hover[type="primary"]{
  background-color:#348EFA;
}
.debug{
  background: #cab;
}
.flex-row{
  display: flex;
}
.flex-1{
  flex: 1;
}
.flex-2{
  flex: 2;
}
.flex-3{
  flex: 3;
}
.flex-4{
  flex: 4;
}
.flex-5{
  flex: 5;
}
.flex-6{
  flex: 6;
}
.desc {
  color: #999999;
  font-size: 26rpx;
  line-height: 1.2;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.primary{
  color:#4D9CFB;
}
.btnback{
  position: fixed;
  top:70rpx;
  left:40rpx;
  color:white;
}
.bg-white{
  background: #fff;
}

.title-shot{
  width:6rpx;
  height:18rpx;
  margin-left:22rpx;
  margin-top:28rpx;
  background:#5391E1;
}
.title-view{
  color:#666666;
  font-size: 24rpx;
  line-height: 24rpx;
  margin-left: 14rpx;
  margin-top:24rpx;
}
.superheader{
  background: #29A5EE;
  height: 140rpx;
  width: 750rpx;
  position: fixed;
  top: 0px;
  left: 0px;
}
.superheader .title{
  color:white;
  font-size: 40rpx;
  text-align: center;
  margin-top: 50rpx;
}
.text-right{
    text-align: right;
}
page{
  margin-top: 140rpx;
}
.text-right{
  text-align: right;
}